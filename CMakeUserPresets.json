{
  "version": 6,
  "configurePresets": [
    {
      "name": "clang",
      "displayName": "Clang (Local)",
      "description": "Uses Clang compiler with Ninja",
      "inherits": "default",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C:/Program Files/LLVM/bin/clang.exe",
        "CMAKE_CXX_COMPILER": "C:/Program Files/LLVM/bin/clang++.exe"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug (Local)",
      "description": "Debug build with Clang",
      "inherits": "clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "clang",
      "configurePreset": "clang"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    }
  ]
}
